@model ProductViewModel

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
              @*   @(Model.Product?.productID != 0 ? "Update" : "Add") *@
                <h2 class="text-white py-2">@ViewBag.Action Product</h2>
            </div> 
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Product.ProductImageURL" hidden />
            <input asp-for="Product.ProductID" hidden />
           
            <div class="row">
                <div class="col-9">
                    <div class="border p-3">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.ProductName" class="form-control border-0 shadow" />
                            <label asp-for="Product.ProductName" class="ms-2"></label>
                            <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                        </div>
                        <div class="py-2 col-12">
                            <label asp-for="Product.ProductDescription" class="ms-2 text-muted"></label>
                            <textarea asp-for="Product.ProductDescription" class="form-control border-0 shadow"></textarea>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.Product.ProductColor" class="form-control border-0 shadow" />
                            <label asp-for="@Model.Product.ProductColor" class="ms-2"></label>
                            <span asp-validation-for="@Model.Product.ProductColor" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.ProductPrice" class="form-control border-0 shadow" />
                            <label asp-for="Product.ProductPrice" class="ms-2"></label>
                            <span asp-validation-for="Product.ProductPrice" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <select  asp-for="@Model.Product.CategoryID"
                                    asp-items="@Model.Categories" class="form-select border-0 shadow">
                                <option value="" disabled selected>--Select Product Category--</option>
                            </select>
                            <label asp-for="Product.Category.CategoryName" class="ms-2"></label>
                            <span asp-validation-for="Product.CategoryID" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Product.BrandID" 
                                asp-items="@Model.Brands" class="form-select border-0 shadow">
                                <option value="" disabled selected>--Select Product Brand--</option>
                            </select>
                            <label  asp-for="Product.Brand.BrandName" class="ms-2"></label>
                            <span asp-validation-for="Product.BrandID" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Product.GenderID" asp-items="@Model.Genders" class="form-select border-0 shadow">
                                <option value="" disabled selected>--Select the Gender--</option>
                            </select>
                            <label asp-for="@Model.Product.Gender.GenderName" class="ms-2"></label>
                            <span asp-validation-for="Product.GenderID" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="productIMG" class="form-control border-0 shadow" />
                            <label asp-for="Product.ProductImageURL" class="ms-2"></label>
                          @*   <span asp-validation-for="Product.ProductImageURL" class="text-danger"></span> *@
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Product?.ProductID != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Save</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border  form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>


                    </div>
                </div>
                <div class="col-3 card rounded">
                    <img src="@(Model.Product.ProductImageURL ?? "~/content/images/No_Image_Available.jpg")"
                         asp-append-version="true" style="border-radius:5px; border:1px solid #bbb9b9" />
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts{
  
    @{

        <partial name="_ValidationScriptsPartial" />
    }
}