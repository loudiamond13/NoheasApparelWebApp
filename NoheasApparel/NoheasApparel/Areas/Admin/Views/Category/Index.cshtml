@{
    
}﻿

@model IEnumerable<Category>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="AddEdit" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Create New Category
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                   
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.CategoryName</td>
                       
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-area="Admin" asp-controller="Category" asp-action="AddEdit" asp-route-id="@category.CategoryID" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pencil"></i> Edit
                                </a>
                                <a asp-route-action="Delete" asp-controller="Category" asp-area="Admin" asp-route-id="@category.CategoryID"
                                   class="btn btn-danger mx-2">
                                    <i class="fa-regular fa-trash-can"></i> Delete
                                </a>
                               
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

    </div>
</div>
@section Scripts
    {
    <script src="~/js/adminProduct.js"></script>
    <script src="~/js/site.js"></script>
}
